<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Books</title>
  <link rel="stylesheet" type="text/css" href="styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
  <div class="navbar">
    <a href="/dashboard" style="color: white; text-decoration: none;">
      <div class="logo">
        <h1>Library Management System</h1>
      </div>
    </a>
    <div class="options">
      <a href="/profile">View Profile</a>
      <a href="/books">Check Out Books</a>
      <a href="/checked-out-books">View Checked Out Books</a>
      <a href="/logout">Log Out</a>
    </div>
  </div>
  <div class="content">
    <div class="form-container">
      <div class="back-button">
        <a href="/dashboard"><i class="fas fa-arrow-left" style="color: black;"></i></a>
      </div>
      <br>
      <h2>All Books</h2>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Category</th>
          <th>Quantity</th>
          <th>Check Out Book</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(book => { %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.category.name %></td>
            <td><%= book.quantity - book.checkedOutQuantity %></td>
            <td>
              <form method="post" action="/check-out">
                <input type="hidden" name="bookId" value="<%= book._id %>">
                <button type="submit" <% if (book.quantity - book.checkedOutQuantity === 0) { %> disabled <% } %>>Check Out</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    </div>
  </div>
</body>
</html>